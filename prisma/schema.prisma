generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Sale {
  id             Int          @id @default(autoincrement())
  date           DateTime
  region         String
  sku            String
  salesAmount    Float
  unitsSold      Int
  createdAt      DateTime     @default(now())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  sales     Sale[]
  users     User[]
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  password       String
  role           String       @default("OWNER")
  organizationId String
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id])
}
